<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfileFragment">

<ImageView
    android:id="@+id/bkg"
    android:scaleType="centerCrop"
    android:src="@drawable/profilebkg"
    android:layout_width="match_parent"
    android:layout_height="160dp" />
    <ImageView
        android:background="@drawable/round_bg"
        android:src="@drawable/chefprofile"
        android:layout_marginTop="110dp"
        android:id="@+id/profilepic"
        android:layout_marginLeft="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />

<TextView
    android:textColor="@android:color/black"
    android:layout_margin="16dp"
    android:layout_below="@id/profilepic"
    android:text="TestUnit#4"
    android:textStyle="bold"
    android:textSize="18dp"
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="1"/>
    <LinearLayout
        android:id="@+id/sumLin"
        android:orientation="horizontal"
        android:layout_below="@id/name"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Dishes Cooked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text="2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Calories Consumed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text="700 Cal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Time Spent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text="1h 15min"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#fffbe6"
        android:orientation="vertical"
        android:layout_below="@id/sumLin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:text="Favorite Dishes"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                android:src="@drawable/demo_one"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/demo_two"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <ImageView

                android:src="@drawable/demo_three"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <ImageView

                android:src="@drawable/demo_four"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>