<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetails">

    <FrameLayout
        android:id="@+id/recipeImageLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@android:color/transparent"/>
        <ImageView
            android:id="@+id/recipeImage"
            android:src="@drawable/friedlo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Recipe"
            android:scaleType="fitXY" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg" />
    </FrameLayout>
    <ImageView
        android:tint="@android:color/white"
        android:id="@+id/like"
        android:layout_marginRight="15dp"
        android:tag="notLike"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_favorite_border_black_18dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/buttonsLayout"
   />
    <TextView
        android:id="@+id/recipeTitle"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Recipe Name 1"
        android:layout_above="@id/buttonsLayout"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_below="@id/recipeImageLayout"
        android:orientation="horizontal"
        android:id="@+id/buttonsLayout"
        android:gravity="center_horizontal"
        android:background="#000000"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="40dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cook IT"
            android:textStyle="bold"
            android:id="@+id/cookIt"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/poping_red"
            android:background="@drawable/round_bg"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lastR"
        android:paddingTop="5dp"
        android:layout_below="@id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_toLeftOf="@id/vertical_divider"
        android:layout_above="@id/horizontal_divider"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/calorie"
            android:scaleType="fitCenter"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            android:id="@+id/calorieText"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="----"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/vertical_divider"
            android:layout_above="@id/horizontal_divider"
            android:layout_width="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView

                android:src="@drawable/cooking_time"
                android:scaleType="fitCenter"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <TextView
                android:id="@+id/cookingTimeText"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="----"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/vertical_divider"
            android:layout_below="@id/horizontal_divider"
            android:layout_width="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/nbr_of_ingr"
                android:scaleType="fitCenter"
                android:layout_width="90dp"
                android:layout_height="90dp"
              />
            <TextView
                android:id="@+id/nbrOfIngrText"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="----"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toLeftOf="@id/vertical_divider"
            android:layout_below="@id/horizontal_divider"
            android:layout_width="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView

                android:src="@drawable/rating"
                android:scaleType="fitCenter"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/rankText"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="----"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <View
            android:id="@+id/horizontal_divider"
            android:layout_above="@id/space"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:id="@+id/space"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
        <View
            android:id="@+id/vertical_divider"
            android:layout_toStartOf="@id/space"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_toLeftOf="@id/space" />
    </RelativeLayout>
</RelativeLayout>